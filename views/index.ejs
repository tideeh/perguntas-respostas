<%- include("partials/header.ejs") %>
<body>
	<%- include("partials/navbar.ejs") %>
	
	<div class="container">
		<hr>
		<h1>Perguntas</h1>
		<hr>
		<a href="/perguntar" class="btn btn-success">Perguntar</a>
		<hr>
		<% perguntas.forEach(pergunta => { %>
			<br>
			<div class="card">
				<div class="card-body">
					<%= pergunta.titulo %>
				</div>
				<div class="card-footer">
					<a href="/pergunta/<%= pergunta.id %>" class="btn btn-success">Responder</a>
				</div>
			</div>
			
		<% }) %>
	</div>

</body>
<%- include("partials/footer.ejs") %>